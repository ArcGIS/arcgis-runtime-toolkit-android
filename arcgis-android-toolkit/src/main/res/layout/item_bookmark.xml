<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bookmarkItem"
            type="com.esri.arcgisruntime.mapping.Bookmark" />

        <variable
            name="onItemClickListener"
            type="com.esri.arcgisruntime.toolkit.bookmark.BookmarkAdapter.OnItemClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> onItemClickListener.onItemClick(bookmarkItem)}"
        android:paddingStart="@dimen/item_bookmark_padding_horz"
        android:paddingTop="@dimen/item_bookmark_padding_vert"
        android:paddingEnd="@dimen/item_bookmark_padding_horz"
        android:paddingBottom="@dimen/item_bookmark_padding_vert">

        <TextView
            android:id="@+id/bookmarkName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@{bookmarkItem.name}"
            android:textSize="@dimen/item_bookmark_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bookmark Name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
