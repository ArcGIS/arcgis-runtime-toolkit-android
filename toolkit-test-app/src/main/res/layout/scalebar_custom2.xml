<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.esri.arcgisruntime.toolkit.test.scalebar.ScalebarTestActivity">

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="@string/scalebar_title_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/scalebar"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <com.esri.arcgisruntime.toolkit.java.scalebar.Scalebar
            android:id="@+id/scalebar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            scalebar.style="DUAL_UNIT_LINE"
            scalebar.alignment="RIGHT"
            scalebar.unitSystem="IMPERIAL"
            scalebar.fillColor="@android:color/holo_orange_light"
            scalebar.lineColor="@android:color/holo_blue_bright"
            scalebar.shadowColor="@android:color/black"
            scalebar.textColor="@android:color/black"
            scalebar.textShadowColor="@android:color/white"
            scalebar.textSize="15"
            scalebar.barHeight="16"
            app:layout_constraintStart_toEndOf="@+id/message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/mapview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/scalebar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout_controls"
            android:layout_marginTop="4dp"/>

    <include
        android:id="@+id/layout_controls"
        layout="@layout/layout_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
