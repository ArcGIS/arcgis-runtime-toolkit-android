<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="popupViewTestViewModel"
                type="com.esri.arcgisruntime.toolkit.test.popup.viewmodel.PopupViewTestViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.esri.arcgisruntime.mapping.view.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:map="@{popupViewTestViewModel.map}" />

        <androidx.cardview.widget.CardView
                android:id="@+id/bottomSheetContainer"
                style="?attr/bottomSheetStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:clickable="true"
                app:behavior_draggable="true"
                app:behavior_fitToContents="false"
                app:behavior_halfExpandedRatio="0.5"
                app:behavior_hideable="true"
                app:behavior_peekHeight="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="50dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <fragment
                    android:id="@+id/bottomSheetPopupFragment"
                    android:name="com.esri.arcgisruntime.toolkit.test.popup.views.fragment.PopupFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true" />
        </androidx.cardview.widget.CardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
